<Window x:Class="Aufgabe_7.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Aufgabe_7"
        mc:Ignorable="d"
  Title="Catch the Button" Height="600" Width="800" Loaded="Window_Loaded" Topmost="True" ResizeMode="NoResize">
  <Grid>
    <Grid.RowDefinitions>
      <RowDefinition Height="40"/>
      <RowDefinition Height="*"/>
    </Grid.RowDefinitions>
    <Canvas x:Name="spielfeld" Grid.Row="1" />
    <ProgressBar Name="PBar" Grid.Row="0" Margin="10,10,0,13"  HorizontalAlignment="Left" VerticalAlignment="Top" Width="300" Height="20" Minimum="0" Maximum="10" Value="10">
    </ProgressBar>
    <Label x:Name="punktAnzeige" Content="0" HorizontalAlignment="Right" Margin="0,20,30,0" Grid.Row="1" VerticalAlignment="Top" FontSize="22"/>
    <Label x:Name="zeitAnzeige" Content="0" HorizontalAlignment="Right" Margin="0,45,30,0" Grid.Row="1" VerticalAlignment="Top" FontSize="22"/>
  </Grid>
</Window>
